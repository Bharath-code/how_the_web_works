---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="About | How The Web Works" description="About the project.">
    <div class="max-w-[var(--spacing-container)] mx-auto px-6 py-20">
        <h1 class="font-serif text-4xl mb-6">About</h1>
        <p class="font-sans text-xl leading-relaxed max-w-2xl">
