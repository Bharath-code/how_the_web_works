<div
    class="my-8 border border-black/10 rounded-lg bg-gray-50/50 checklist-wrapper"
>
    <div class="px-6 py-4 border-b border-black/5 flex items-center gap-3">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-black/50"
            ><path d="M9 11l3 3L22 4"></path><path
                d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"
            ></path></svg
        >
        <span
            class="font-mono text-xs font-bold uppercase tracking-widest text-black/50"
            >Practical Checklist</span
        >
    </div>
    <div class="p-6">
        <slot />
    </div>
</div>

<style is:global>
    /* Remove default list styling from the MDX output */
    .checklist-wrapper ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    /* Style the list items */
    .checklist-wrapper li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        line-height: 1.6;
        color: #111;
    }

    /* Target the checkbox input */
    .checklist-wrapper li input[type="checkbox"] {
        appearance: none;
        -webkit-appearance: none;
        width: 1.25em;
        height: 1.25em;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-top: 0.25em;
        display: grid;
        place-content: center;
        flex-shrink: 0;
        cursor: not-allowed; /* Read-only feel */
    }

    .checklist-wrapper li input[type="checkbox"]::before {
        content: "";
        width: 0.65em;
        height: 0.65em;
        transform: scale(0);
        transition: 120ms transform ease-in-out;
        box-shadow: inset 1em 1em #000; /* Black checkmark */
        transform-origin: center;
        clip-path: polygon(14% 44%, 0 65%, 50% 100%, 100% 16%, 80% 0%, 43% 62%);
    }

    .checklist-wrapper li input[type="checkbox"]:checked::before {
        transform: scale(1);
    }
</style>
